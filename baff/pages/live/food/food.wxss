/*搜索*/
.header{
  display: flex;
  width: 100%;
}

.search_groups{
  display: flex;
  background-color: #f0f0f0;
  margin: 30rpx;
  flex: 1;
  border-radius: 60rpx;
}

.search_groups .icon-search{
  padding-left: 50rpx;
  padding-top: 25rpx;
}

.search_groups .input{
    height: 72rpx;
    line-height: 56rpx;
    font-size: 28rpx; 
    margin-left: 30rpx;
}

.switch{
    width:41rpx;
    height:48rpx;
    margin:40rpx 30rpx 30rpx 0rpx;
}

/*列表框*/
.list_groups{
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #E6E6EA;
  height: 88rpx;
  padding-left: 65rpx;
  padding-right: 65rpx;
}

.list_groups .place{ 
  display: flex;
  justify-content: center;
  flex-direction: row;
  flex: 1;
}

.list_groups .place .title{
  color: #666666;
  font-size: 32rpx;
  margin-top:20rpx;
  float:left;
  max-width: 165rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list_groups .place .icon{
   height: 14rpx;
   width: 14rpx;
    margin-left: 14rpx;
    margin-top: 55rpx;
    float: left;
}

.list_groups .live{
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: row;
  margin: 0rpx 15rpx;
  
}

.list_groups .live .title{
  color: #666666;
  font-size: 32rpx;
  margin-top:20rpx;
  float:left;
}

.list_groups .live .icon{
   height: 14rpx;
   width: 14rpx;
   margin-left: 14rpx;
   margin-top: 55rpx;
    float: left;
}

.list_groups .morelive{
  display: flex;
  justify-content: center;
  flex-direction: row;
  flex: 1;
}

.list_groups .morelive .title{
  color: #666666;
  font-size: 32rpx;
  margin-top:20rpx;
  float:left;
  max-width: 165rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list_groups .morelive .icon{
   height: 14rpx;
   width: 14rpx;
   margin-left: 14rpx;
   margin-top: 55rpx;
    float: left;
}



/*列表*/
.list{
  display: flex;
  flex: 1;
  flex-direction: column;
}

.list .item{
  display: flex;
  cursor: pointer;
  position: relative;
  height: 230rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-color: rgb(103, 46, 108);
}



.list .item .title_group{
  position: absolute;
  bottom: -1rpx;
  width: 100%;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(transparent), to(#000000));
  padding-top:10rpx;
}

.list .item .title_group .title{
    color:white;
    font-size: 38rpx;
    font-weight:bold;
    margin-left: 35rpx;
    margin-bottom: 25rpx;
    max-width: 72%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .title_group .arrow{
    width:68rpx;
    height: 68rpx;
    position: absolute;
    right: 30rpx;
    bottom: 25rpx;
}

.list .logo_groups{
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: space-between;
    background-color: rgb(104, 46, 107);
    width:100%;
    margin-top: 2rpx;
}


.list .logo_groups .logo{
  font-size: 38rpx;
  font-weight: bold;
  
  color: white;
  padding: 50rpx 25rpx;
}

.list .logo_groups .arrow{
  display: flex;
  height: 68rpx;
  width: 68rpx;
  margin-top:46rpx;
  margin-right: 25rpx;
}

