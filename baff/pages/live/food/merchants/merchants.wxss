.supplement{
    display: flex;
    flex: 1;
    flex-direction: column;
    border-bottom: 20rpx solid rgb(238, 238, 238)
}

.supplement .title_groups{
    display: flex;
    flex: 1;
    flex-direction: row;
    align-items: center;
    padding: 30rpx 0rpx;
    border-bottom: 1rpx solid rgb(238, 238, 238)
}

.supplement .title_groups .icon{
  height: 34rpx;
  width:10rpx;
  background-color: rgb(253, 183, 23);
  margin-right: 24rpx;
  margin-left: 43rpx;
}

.supplement .title_groups .title{
  font-size: 34rpx;
  font-weight: bold;
}

.supplement .text{
  font-size: 28rpx;
  line-height: 50rpx;
  color: rgb(140, 140, 140);
  margin: 33rpx 50rpx 60rpx 45rpx;
}



