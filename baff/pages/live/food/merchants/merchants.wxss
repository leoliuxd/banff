    display: flex;
    flex: 1;
    flex-direction: column;
    margin-left: 25rpx;
    padding: 0rpx 80rpx 50rpx 80rpx;
    background-color: rgb(103, 46, 108);
    float:left;
    position: relative;
    width: 77%;
}

