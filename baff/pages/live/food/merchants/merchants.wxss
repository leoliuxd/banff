.list{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.list .swiper{
  width:100%;
  height:538rpx; 
}

.list .swiper .img{
  width:100%;
  height: 100%;
}

.meta{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.meta .name_groups{
  margin: 52rpx;
}

.meta .name_groups .name{
  font-size: 44rpx;
  color: rgb(104, 46, 107);
  font-weight: bold;
  float: left;
}

.meta .name_groups .btn_groups{
  float:right;
}

.meta .name_groups .btn_groups .icon3{
  height: 68rpx;
  width: 68rpx;
  float: right;
}

.meta .name_groups .btn_groups .btn{
  height: 70rpx;
  width: 70rpx;
  float: right;
  border: 0rpx;
  position: relative;
}

.meta .name_groups .btn_groups .btn .icon1{
  height: 68rpx;
  width: 68rpx;
  position: absolute;
  left: 0rpx;
  top:0rpx;
}

.meta .name_groups .btn_groups .icon2{
  height: 68rpx;
  width: 68rpx;
  float: right;
  margin: 0rpx 20rpx;
}




.meta .profile{
  font-size: 28rpx;
  line-height: 50rpx;
  font-weight: bold;
  margin: 3rpx 60rpx 65rpx;
}


