.page{
  margin: 0rpx 25rpx;
}

.header{
     display: flex;
}
.search-bar{
    position: relative;
    margin: 25rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width:620rpx;
}

.search-bar__form{
    position: relative;
    -webkit-box-flex: 1;
    -webkit-flex: auto;
    flex: auto;
    border-radius: 60rpx;
    background: #FFFFFF;  
}

.search-bar__box{
    position: relative;
    padding-left: 60rpx;
    padding-right: 60rpx;
    width: 100%;
    box-sizing: border-box;
    z-index: 1;
}

.icon-search_in-box{
    position: absolute;
    left: 20rpx;
    top: 14rpx;
}

.search-bar__input{
    height: 72rpx;
    line-height: 56rpx;
    font-size: 28rpx;
}

.icon-clear{
    position: absolute;
    top: 0;
    right: 0;
    padding: 14rpx 16rpx;
    font-size: 0;
}

.search-bar__label{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 2;
    border-radius: 60rpx;
    color: #999999;
    background: rgb(240, 240, 240);
}

.icon-search{
    margin-top: 10rpx;
    margin-left: 25rpx;
    font-size: inherit;
}

.search-bar__text{
    position: absolute;
    top:20rpx;
    left:60rpx;
    display: inline-block;
    font-size: 26rpx;
}

.search-bar__cancel-btn{
    margin-left: 20rpx;
    line-height: 56rpx;
    color: #09BB07;
    white-space: nowrap;
}

.live{
  border-bottom: 23rpx solid rgb(245,245,245);
}

 .title_group{
  margin: 53rpx 0rpx;
}

 .title_group .icon{
  height: 30rpx;
  width: 10rpx;
  float: left;
  margin-left: 24rpx;
  background-color: rgb(254, 213, 31);
}

 .title_group .title{
  margin-top: -10rpx;
  font-size: 34rpx;
  color: #682e6b;
  float: left;
  margin-left: 23rpx;
  font-weight: bold;
}

 .body .item{
  width: 100%;
  height: 233rpx;
  margin-bottom: 55rpx;
}

 .body .item .img{
  float: left;
  height: 100%;
  width: 260rpx;
}

 .item .meta{
  margin-left: 30rpx;
  float: left;
  margin-top: 12rpx;
  border-top: 1rpx solid rgb(238, 238, 238);
  width:409rpx;
}

 .body .item .meta .name{
  margin: 10rpx 0rpx;
