
/**index.wxss**/
.swiper-tab{
	width: 100%;
  border-bottom: 1rpx solid rgb(230, 230, 230);
  display: flex;
}
.swiper-tab-list{
  display: flex;
	flex:1;
	color: #666666;
  font-size: 32rpx;
  font-weight: bold;
  justify-content: center;
  align-content: center;
  padding: 28rpx 0rpx;
}
.on{ 
  color: #672e6c;
}

.swiper-tab-list .img{
  height: 44rpx;
  width: 44rpx;
 
}

.swiper-tab-list .title{
  margin-left: 20rpx;
}

.swiper-box{
  width:100%;
  margin-top: 10rpx;
  height:1150rpx;
 
}

.list{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.list .item{
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  cursor: pointer;
  position: relative;
}

.item .poster{
  width: 100%;
  height: 290rpx;
   background-color: rgb(103, 46, 108);
}

.item .title_group{
 position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(transparent), to(#000000));
  padding-top:10rpx;
}

.item .title_group .title{
    color:white;
    float: left;
    font-size: 38rpx;
    font-weight:bold;
    margin-left: 35rpx;
    width: 80%;
    margin-bottom: 25rpx;
}

.item .title_group .icon{
    width:25rpx;
    height: 32rpx;
    position: absolute;
    right: 26rpx;
    bottom: 43rpx;
}

.item .delete{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:-12rpx;
  left:-13rpx;
  z-index: 3;
}

.date{
  width: 100%;
  margin-top:20rpx;
}
.date .icon{
  height: 24rpx;
  width: 32rpx;
  float: left;
  margin-left: 30rpx;
  margin-top: 6rpx;
}

.date .text{
  font-size: 24rpx;
  color: #666666;
  margin-left: 20rpx;
  float: left;
  
}




