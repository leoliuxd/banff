.list{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.list .header{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.list .header .img{
  height: 420rpx;
  width:100%;
  background-color: rgb(103, 46, 108);
}

.list .header .title{
  margin:50rpx 50rpx 30rpx 50rpx;
  font-size: 44rpx;
  font-weight: bold;
  color: rgb(104, 46, 107);
}

.list .header .subTitle_groups {
  margin-left: 50rpx;
  margin-bottom: 50rpx;
  display: flex;
  text-align: center;
}

.list .header .subTitle_groups .subTitle{
  font-size: 24rpx;
  color: #666666;
  margin-top: 20rpx;
}

.list .header .subTitle_groups .icon{
  width: 54rpx;
  height: 54rpx;
  margin-left: 30rpx;
  margin-top: 8rpx;
}

.list .body{
  margin-left: 50rpx;
  margin-right: 50rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.place_ids{
  position: relative;
  height: 280rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-color: rgb(103, 46, 108);
  margin-left:50rpx;
  margin-right: 50rpx;
}

.place_ids .mask{
  width: 100%;
  height: 280rpx;
  position: absolute;
  left: 0rpx;
  top:0rpx;
  background-color: black;
  opacity: 0.3;
  z-index: 1;
}

.place_ids .title_groups{
  color:white;
  font-size: 42rpx;
  font-weight:bold;
  position: absolute;
  left: 0rpx;
  top:0rpx;
  z-index: 2;
  display: flex;
  width: 88%;
  height: 280rpx;
  justify-content: center;
  align-items: center;
  margin: 0rpx 40rpx;
}

.place_ids .title_groups .title{
  text-align: center;
  margin: 0rpx 20rpx;
}




