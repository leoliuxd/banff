<import src="../../../wxParse/wxParse.wxml"/> 
<view class="Page">
  <view wx:if="{{remind}}" class="weui-loadmore">
    <view class="weui-loading"></view>
    <view class="weui-loadmore__tips">正在加载</view>
  </view>
  <scroll-view scroll-y="true" class="list" style="height:{{scrollHeight}}px;" wx:else>
    <view class="header">
      <image src="{{img}}" class='img' mode="aspectFill" binderror="errImg" wx:if="{{img.length > 0}}"></image>
      <image src="../../../image/default.png" class='img' mode="aspectFill" wx:else></image>
      <view class="title">{{title}}</view>
      <view class="subTitle_groups">
        <view class="subTitle">{{author}}</view>
        <image src="../../../image/location_icon.png" class="icon" bindtap="skip" wx:if="{{id != 0}}"></image>
      </view>
    </view>
    <view class="body">
      <template is="wxParse" data="{{wxParseData:content.nodes}}"/>
    </view>
    <image src="http://mmbiz.qpic.cn/mmbiz_jpg/a50zIegOrVo8Em98JtyzT9FH6803XJPvf6jE7zWwZLvjTd1CvRzKRouiaErocwxgA1jfjIbNOlYGyP2q2ETrz0Q/640?wx_fmt=jpeg&tp=webp&wxfrom=5&wx_lazy=1" mode="aspectFill"></image>
  </scroll-view>
</view>



