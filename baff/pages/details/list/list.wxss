.list{
  margin-bottom: 60rpx;
}

.detail_list{
  position: relative;
  height: 280rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-color: rgb(103, 46, 108);
  margin: 0rpx 50rpx;
}

.detail_list .mask{
  width: 100%;
  height: 280rpx;
  position: absolute;
  left: 0rpx;
  top:0rpx;
  background-color: black;
  opacity: 0.3;
  z-index: 1;
}

.detail_list .title{
  color:white;
  font-size: 42rpx;
  font-weight:bold;
  position: absolute;
  left: 0rpx;
  top:0rpx;
  z-index: 2;
  width: 100%;
  text-align: center;
  line-height: 280rpx;
}


.header{
    border-bottom: 1rpx solid white;
    position: relative;
}

.header .img{
  width:100%;
  height: 280rpx;
  background-color: rgb(103, 46, 108);
}

.header .title{
    color:white;
    position:absolute;
    left:25rpx;
    bottom:30rpx;
    font-size: 42rpx;
    font-weight:bold;
}

.intro{
  margin-left: 50rpx;
  margin-right: 50rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
