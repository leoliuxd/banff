
.content_item{
  width: 100%;
  border-bottom: 23rpx solid rgb(245,245,245);
  position: relative;
}

.content_item .icon{
  width: 12rpx;
  height: 26rpx;
  background-color: #fdb717;
  position: absolute;
  left: 33rpx;
  top:42rpx;
}

.content_item .title{
  width: 80%;
  margin: 32rpx auto;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.content_item .detail{
  font-size:28rpx;
