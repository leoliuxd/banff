.list{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.list .swiper{
  width:100%;
  height:538rpx; 
}

.list .swiper .img{
  width:100%;
  height: 100%;
}

.meta{
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
}

.meta .name{
  font-size: 44rpx;
  color: rgb(104, 46, 107);
  margin: 50rpx 0rpx;
  font-weight: bold;
}

.meta .profile{
  font-size: 28rpx;
  line-height: 50rpx;
  font-weight: bold;
  margin: 5rpx 60rpx 65rpx;
}

.details{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.details .logo_groups{
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: space-between;
    background-color: rgb(104, 46, 107);
    width:100%;
}


.details .logo_groups .logo{
  font-size: 38rpx;
  font-weight: bold;
  
  color: white;
  padding: 50rpx 25rpx;
}

.details .logo_groups .arrow{
  display: flex;
  height: 68rpx;
  width: 68rpx;
  margin-top:46rpx;
  margin-right: 25rpx;
}

.details .img_groups{
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: space-between;
    width:100%;
    
    margin-top: 2rpx;
    position: relative;
}

.details .img_groups .img{
  height: 280rpx;
  width: 100%;
}

.details .img_groups .title{
  font-size: 38rpx;
  font-weight: bold;
  color: white;
  position: absolute;
  left:26rpx;
  top:200rpx;
}

.details .img_groups .arrow{
  height: 68rpx;
  width: 68rpx;
  position: absolute;
  top:183rpx;
  right:25rpx;
}