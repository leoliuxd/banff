.list{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.list .swiper{
  width:100%;
  height:538rpx; 
}

.list .swiper .img{
  width:100%;
  height: 100%;
  background-color: rgb(103, 46, 108);
}

.meta{
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
}

.meta .name{
  font-size: 44rpx;
  color: rgb(104, 46, 107);
  margin: 50rpx 0rpx;
  font-weight: bold;
}

.meta .profile{
  font-size: 28rpx;
  line-height: 50rpx;
  margin: 5rpx 25rpx 65rpx;
}

.details{
    display: flex;
    flex: 1;
    flex-direction: column;
    margin: 0rpx 25rpx 60rpx;
}

.details .logo_groups{
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: space-between;
    background-color: rgb(104, 46, 107);
    width:100%;
}


.details .logo_groups .logo{
  font-size: 38rpx;
  font-weight: bold;
  
  color: white;
  padding: 50rpx 25rpx;
}

.details .logo_groups .arrow{
  display: flex;
  height: 68rpx;
  width: 68rpx;
  margin-top:46rpx;
  margin-right: 25rpx;
}

.details .img_groups{
    display: flex;
    width:100%;
    height: 280rpx;
    margin-top: 2rpx;
    position: relative;
    cursor: pointer;
    background-repeat: no-repeat;
    background-size: cover;
    background-color: rgb(103, 46, 108);
}

.details .img_groups .title_groups{
  position: absolute;
  bottom: -1rpx;
  width: 100%;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(transparent), to(#000000));
  padding-top:10rpx;
}


.details .img_groups .title_groups .title{
   color:white;
    font-size: 38rpx;
    font-weight:bold;
    margin-left: 35rpx;
    margin-bottom: 25rpx;
    max-width: 72%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.details .img_groups .arrow{
  width:68rpx;
    height: 68rpx;
    position: absolute;
    right: 30rpx;
    bottom: 25rpx;
}