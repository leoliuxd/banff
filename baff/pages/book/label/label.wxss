.label_item{
  width: 100%;
  border-bottom: 23rpx solid rgb(245,245,245);
  position: relative;

}

.label_item .title_group{
  margin: 60rpx 60rpx 36rpx;
  vertical-align: middle;
}

.label_item .title_group .title{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  float: left;
  margin-left: 27rpx;
}

.label_item .text{
  margin: 0rpx 100rpx 36rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #333333;
}

.label_item .title_group .icon{
  width: 12rpx;
  height: 26rpx;
  background-color: #fdb717;
  float: left;
  
  margin-top: 10rpx;
}