.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  -webkit-transition: .3s;
  transition: .3s;
}
.weui-cells:before,
.weui-cells:after {
  display: none;
}
.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.weui-cell:before {
  right: 15px;
}
.kind-list__item {
  margin: 10px 0;
  background-color: #FFFFFF;
  overflow: hidden;
}
.kind-list__item:first-child {
  margin-top: 0;
}
.kind-list__img {
  width: 30px;
  height: 30px;
}
.kind-list__item-hd {
  -webkit-transition: opacity .3s;
  transition: opacity .3s;
}
.kind-list__item-hd_show {
  opacity: .4;
}
.kind-list__item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list__item-bd_show {
  height: auto;
}

/*景点布局*/
.title_groups{
    display: flex;
    flex: 1;
    flex-direction: row;
    align-items: center;
    position: relative;
}

.title_groups .icon{
  height: 60rpx;
  width: 60rpx;
  margin: 25rpx 20rpx 25rpx 0rpx;
}

.title_groups .arrow{
  height:26rpx;
  width:37rpx;
  position: absolute;
  top:37rpx;
  right:0rpx;
}

.title_groups .title{
  font-size: 34rpx;
  font-weight: bold;
  color:rgb(104, 46, 107);
}

.scenery{
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  overflow: hidden;
}

.scenery_item{
    display: flex;
    width: 100%;
    margin-bottom: 10rpx;
    position: relative;   
    cursor: pointer;
    height: 230rpx;
    background-repeat: no-repeat;
    background-size: cover;
    background-color: rgb(103, 46, 108);

}



.scenery_item .name_group{
  position: absolute;
  bottom: -1rpx;
  width: 100%;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(transparent), to(#000000));
  padding-top:10rpx;
}

.scenery_item .name_group .title{
    color:white;
    font-size: 38rpx;
    font-weight:bold;
    margin-left: 35rpx;
    margin-bottom: 25rpx;
    max-width: 72%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.scenery_item .name_group .icon{
   width:68rpx;
    height: 68rpx;
    position: absolute;
    right: 30rpx;
    bottom: 25rpx;
}

/*探险布局*/

.advention{
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  overflow: hidden;
}

.advention_item{
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    width: 49%;
    z-index: 1;
    border-bottom: 6rpx solid #ecebec;
    margin-bottom: 20rpx;
}

.advention_item .triangle{
  z-index: 2;
  width: 0;
  height: 0;
  border-left: 25rpx solid transparent;
  border-right: 25rpx solid transparent;
  border-bottom: 25rpx solid white;
  margin-top:-22rpx;
}

.advention_item .img{
  display: block;
  height:344rpx;
  width:100%;
  z-index: 1;
  background-color: rgb(103, 46, 108);
}

.advention_item .title{
  font-size: 34rpx;
  font-weight: bold;
  color:rgb(102, 102, 102);
  margin-top:20rpx;
  margin-bottom: 20rpx;
}
