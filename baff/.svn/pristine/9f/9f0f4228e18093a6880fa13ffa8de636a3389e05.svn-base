<view class="Page">
  <scroll-view scroll-y="true" class="list" style="height:{{scrollHeight}}px;">
    <swiper class="swiper" indicator-dots="true">
      <block wx:for="{{swiper_img}}" wx:key="*this">
        <swiper-item>
          <image src="{{item}}" class="img"/>        
        </swiper-item>
      </block>
    </swiper>
    <view class="meta">
      <view class="name">-- {{name}} --</view>
      <view class="profile">{{profile}}</view>
    </view>
    <view class="details">
      <block wx:for="{{details}}" wx:key="*this">
        <navigator url="" class="img_groups" wx:if="{{item.img.length>0}}">
          <image src="{{item.img}}" mode="widthFix" class="img"></image>
          <view class="title">{{item.title}}</view>
          <image src="../../../image/arrow3.png" class="arrow"></image>
        </navigator>
        <navigator url="url" class="logo_groups" wx:else>
          <view class="logo">{{item.title}}</view>
          <image src="../../../image/arrow3.png" class="arrow"></image>
        </navigator>
      </block>
      
    </view>
  </scroll-view>
</view>