/**index.wxss**/


/*班夫生活*/
.bfLive_title,.bfBook_title,.bfWonderful_title{
    width: 100%;
    height:41px;
    line-height: 41px;
    background-color: #efefef;
    padding-left: 22px;
}

.bfLive{
    display: flex;
    flex-flow: column wrap;
    align-content: flex-start;
    overflow: hidden;
    height: 200px;
}

.bfLive .cell1of3{
    display: flex;
    height:66px;
    border-right: 1px solid #efefef;
    border-bottom: 1px solid #efefef;
    width: 25%;
}

.bfLive .cell2of3{
    display: flex;
    height: 132px;
    border-right:1px solid #efefef;
    border-bottom: 1px solid #efefef;
    width: 25%;
}

.bfLive_img{
    display: block;
    height:70px;
    width:100%;
}

.bfLive_name{
    display: block;
    height:30px;
    line-height: 30px;
    text-align: center;
    padding: 0;
}

/*班夫宝典*/
.bfBook{
    display: flex;
    flex-flow: row wrap;
    align-content: flex-start;
    overflow: hidden;
}

.bfBook-item{
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    width: 50%;
}

.bfBook_img{
    display: block;
    height:100px;
    width:100%;
}

/*精彩班夫*/
.container {
  display: flex;
  flex: 1;
  flex-direction: column;
  box-sizing: border-box;
}

.list {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.list .item {
  display: flex;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}

.list .item .poster {
  width: 120px;
  height: 100px;
}

.list .item .meta {
  flex: 1;
  margin-right: 10px;
  margin-left: 15px;
  height: 100px;
  width: 240px;
}

.list .item .meta .title
{
  display: block;
  margin-bottom: 10px;
  font-size: 32rpx;
}

.list .item .meta .text {
    font-size: 24rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

/*加载更多*/
.loadmore_title{
    width: 100%;
    height:41px;
    line-height: 41px;
    background-color: #efefef;
    text-align: center;
}