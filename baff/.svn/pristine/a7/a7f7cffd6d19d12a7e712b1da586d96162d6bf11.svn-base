<import src="../../../wxParse/wxParse.wxml"/> 
<view class="Page">
  <scroll-view scroll-y="true" class="list" style="height:{{scrollHeight}}px;">
    <view class="header">
      <image src="{{img}}" class='img' mode="aspectFill"></image>
      <view class="title">{{title}}</view>
      <view class="subTitle_groups">
        <view class="subTitle">{{author}}</view>
        <image src="../../../../image/location_icon.png" class="icon" bindtap="skip"></image>
      </view>
    </view>
    <view class="body">
      <template is="wxParse" data="{{wxParseData:content.nodes}}"/>
    </view>
  </scroll-view>
</view>



