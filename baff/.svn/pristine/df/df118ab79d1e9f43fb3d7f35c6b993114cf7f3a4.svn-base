/*轮播*/
swiper-container{  
  position: relative;  
}  
.swiper-container .swiper{  
  width:100%;
  height:500rpx; 
}

.swiper-container .swiper .item{  
  width: 100%;  
  height: 100%;
  position: relative;   
}

.swiper-container .swiper .item .img{  
  width: 100%;  
  height: 100%;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
}

.swiper-container .swiper .item .index{
  position:absolute;
  left:50rpx;
  top:325rpx;
  font-size: 46rpx;
  font-weight: bold;
  color: white
}

.swiper-container .swiper .item .divide{
  position: absolute;
  left: 48rpx;
  top:396rpx;
  height: 7rpx;
  width: 46rpx;
  background-color: rgb(159, 35, 170)
}

.swiper-container .swiper .item .title{
  position: absolute;
  left: 47rpx;
  top:410rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.swiper-container .search{
    position: absolute;
    width:71rpx;
    height:70rpx;
    left: 573rpx;
    top:38rpx;
}

.swiper-container .myTrait{
    width:71rpx;
    height:70rpx;
    position: absolute;
    top:38rpx;
    left: 655rpx;
}





