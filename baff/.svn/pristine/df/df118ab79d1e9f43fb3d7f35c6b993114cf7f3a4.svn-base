/*班夫宝典*/
.bfBook{
    display: flex;
    flex-flow: row wrap;
    overflow: hidden;
    margin: 25rpx;
}

.bfBook-item{
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    box-sizing: border-box;
    width: 50%;
    height: 180rpx;
    
}

.bfBook .bfBook-item .title{
    font-size: 38rpx;
    line-height: 30rpx;
    color: white;
    font-weight:bold;
}

.bfBook .bfBook-item .division{
    font-size: 38rpx;
    color: white;
    font-weight:bold;
}

.bfBook .bfBook-item .logo{
    font-size: 22rpx;
    color:white;
}

/*精彩班夫*/
