}


.list {
    display: flex;
    flex: 1;
    flex-direction: column;
    background-color: #f0eff5;
    background-repeat: no-repeat;
    background-size: 100% auto; 
    background-position: bottom center;
    /*使用网络资源*/
    /*background-image: url('../../image/background.png');*/
}

.list .item {
  display: flex;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
  position: relative;
}

.list .item .poster {
  width: 100%;
  height: 230rpx;
  
}

.list .item .title{
    color:white;
    position:absolute;
    top:155rpx;
    left:35rpx;
    font-size: 38rpx;
    font-weight:bold;
}

.list .item .icon{
    width:25rpx;
    height: 32rpx;
    position: absolute;
    top:155rpx;
    right:25rpx;
}

