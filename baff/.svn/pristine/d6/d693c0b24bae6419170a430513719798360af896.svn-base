.swiper{
  width:100%;
  height:1150rpx;
}

.swiper .body{
  background-color: white;
}

.swiper .body .img{
  display: block;
  height: 354rpx;
  width: 560rpx;
  margin:auto;
  padding-top: 120rpx;
  padding-bottom: 80rpx;
}

.swiper .body .title{
  font-size: 36rpx;
  margin-left: 76rpx;
}

.swiper .body .detail{
  font-size: 24rpx;
  padding-top: 80rpx;
  padding-bottom: 120rpx;
  width: 50%;
  margin: auto;
}

.swiper .footer{
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.swiper .footer .icon1{
  width:34rpx;
  height: 44rpx;
  background-color: black;
  margin-left: 76rpx;
}

.swiper .footer .icon2{
  width:34rpx;
  height: 44rpx;
  background-color: black;
  margin-right: 76rpx;
}

