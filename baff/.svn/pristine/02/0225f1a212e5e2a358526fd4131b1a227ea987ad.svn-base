var util = require('../../../utils/util.js')
var app = getApp()
Page({
  data:{
    scrollHeight:0,
    id:'',
    name:'',
    swiper_img:[],
    profile:'',
    details:[],
  },

  onLoad:function(){
    var that=this
    this.getSport()
    wx.getSystemInfo({
      success: function (res) {
        that.setData({
          scrollHeight: res.windowHeight
        });
      }
    });
  },

  //获取探险数据
  getSport: function () {
    var list = util.getAdvention()
    console.log("获取运动数据")
    //console.log(list)
    this.setData({
      id:list[1].pages[0].id,
      name: list[1].pages[0].name,
      swiper_img:list[1].pages[0].swiper_img,
      profile: list[1].pages[0].profile,
      details: list[1].pages[0].details,
    });
  },
})