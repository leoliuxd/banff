.list{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.list .swiper{
  width:100%;
  height:538rpx; 
}

.list .swiper .img{
  width:100%;
  height: 100%;
}

.meta{
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
    border-bottom: 20rpx solid rgb(238, 238, 238)
}

.meta .name{
  font-size: 44rpx;
  color: rgb(104, 46, 107);
  margin: 50rpx 0rpx;
  font-weight: bold;
}

.meta .profile{
  font-size: 28rpx;
  line-height: 50rpx;
  font-weight: bold;
  margin: 5rpx 60rpx 65rpx;
}

.details{
    display: flex;
    flex: 1;
    flex-direction: column;
    border-bottom: 20rpx solid rgb(238, 238, 238)
}

.details .title_groups{
    display: flex;
    flex: 1;
    flex-direction: row;
    align-items: center;
    padding: 30rpx 0rpx;
    border-bottom: 1rpx solid rgb(238, 238, 238)
}

.details .title_groups .icon{
  height: 34rpx;
  width:10rpx;
  background-color: rgb(253, 183, 23);
  margin-right: 24rpx;
  margin-left: 43rpx;
}

.details .title_groups .title{
  font-size: 34rpx;
  font-weight: bold;
}

.details .text{
  font-size: 28rpx;
  line-height: 50rpx;
  color: rgb(140, 140, 140);
  margin: 33rpx 50rpx 60rpx 45rpx;
}