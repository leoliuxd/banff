var util = require('../../../utils/util.js')
var app = getApp()
Page({
  data:{
    scrollHeight:0,
    theme:{},
    swiper_img:[],
    name:'',
    profile:'',
    data:[],
  },

  onLoad:function(){
    var that=this
    this.getTheme(0)
    console.log(this.data.data)
    wx.getSystemInfo({
      success: function (res) {
        that.setData({
          scrollHeight: res.windowHeight
        });
      }
    });
  },

    //获取详情数据
  getTheme: function (id) {
    var theme = util.getTheme(id)
    console.log("获取详情数据")
    this.setData({
      theme: theme,
      swiper_img:theme.img,
      name:theme.name,
      profile:theme.profile,
      data:theme.data,
    });
  },
})