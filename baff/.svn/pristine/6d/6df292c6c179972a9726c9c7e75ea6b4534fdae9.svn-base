.seasonButton{
    height: 50px;
}

/*内容*/
.content{
    display: flex;
    flex: 1;
    flex-direction: column;
    box-sizing: border-box;
}

.list{
    display: flex;
    flex: 1;
    flex-direction: column;
}

.list .item {
  display: flex;
  border-bottom: 2rpx solid #eee;
  cursor: pointer;
}

.list .item .poster {
  width: 230px;
  height: 165px;
}

.list .item .meta {
  flex: 1;
  margin-right: 20px;
  margin-left: 15px;
  height: 165px;
  width: 100px;
}

.list .item .meta .title
{
  display: block;
  padding-top: 15px;
  padding-bottom: 10px;
  text-align: center;
  font-size: 34rpx;
}

.list .item .meta .text {
    font-size: 26rpx;
    text-align: center;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    overflow: hidden;
}

.details{
  font-size: 26rpx;
  padding: 10px 10px;
  border-bottom: 2rpx solid #eee;
}

.unfold{
  height:20px;
  width:20px;
  float: right;
}



/*折叠窗口*/
.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-cells {
  opacity: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  -webkit-transition: .3s;
  transition: .3s;
}
.weui-cells:before,
.weui-cells:after {
  display: none;
}
.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.weui-cell:before {
  right: 15px;
}
.kind-list__item {
  overflow: hidden;
}

.kind-list__item-hd {
  -webkit-transition: opacity .3s;
  transition: opacity .3s;
}
.kind-list__item-hd_show {
  opacity: .4;
}
.kind-list__item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list__item-bd_show {
  height: auto;
}
