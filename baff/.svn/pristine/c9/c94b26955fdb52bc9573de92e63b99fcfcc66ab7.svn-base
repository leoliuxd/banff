/**index.wxss**/

/*轮播*/
swiper-container{  
  position: relative;  
}  
.swiper-container .swiper{  
  width:100%;
  height:500rpx; 
}
.swiper-container .swiper .img{  
  width: 100%;  
  height: 100%;  
}

.swiper-container .icon_group{
    position:absolute;
    top:39rpx;
    left:573rpx;
}
.swiper-container .icon_group .search{
    width:71rpx;
    height:70rpx;
}

.swiper-container .icon_group .myTrait{
    width:71rpx;
    height:70rpx;
    margin-left:15rpx;
}





/*班夫生活*/

.bfLive{
    display: flex;
    flex-flow: column wrap;
    align-content: flex-start;
    overflow: hidden;
    height: 500rpx;
}

.bfLive .cell1of3{
    display: flex;
    height:200rpx;
    width: 25%;
}

.bfLive .cell2of3{
    display: flex;
    height: 300rpx;
    width: 25%;
}


/*班夫宝典*/
.bfBook{
    display: flex;
    flex-flow: row wrap;
    overflow: hidden;
    margin: 25rpx;
}

.bfBook-item{
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    box-sizing: border-box;
    width: 50%;
    height: 180rpx;
    
}

.bfBook .bfBook-item .title{
    font-size: 38rpx;
    line-height: 30rpx;
    color: white;
    font-weight:bold;
}

.bfBook .bfBook-item .division{
    font-size: 38rpx;
    color: white;
    font-weight:bold;
}

.bfBook .bfBook-item .logo{
    font-size: 22rpx;
    color:white;
}

/*精彩班夫*/
.bfWonderful_title{
    font-size:38rpx;
    line-height: 45px;
    margin: 30rpx auto 35rpx;
    text-align:  center;
    color: rgb(103, 46, 108);
    font-weight:bold;
}


.list {
    display: flex;
    flex: 1;
    flex-direction: column;
    background-color: #f0eff5;
    background-repeat: no-repeat;
    background-size: 100% auto; 
    background-position: bottom center;
    background-image: url('../../image/background.png');
}

.list .item {
  display: flex;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
  margin: auto 25rpx;
}

.list .item .poster {
  width: 100%;
  height: 230rpx;
}

