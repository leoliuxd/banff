/**index.wxss**/

/*搜索*/
.search-bar{
    position: relative;
    margin: 0rpx 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width:500rpx;
    
}

.search-bar__form{
    position: relative;
    -webkit-box-flex: 1;
    -webkit-flex: auto;
    flex: auto;
    border-radius: 20rpx;
    background: #FFFFFF;
    border: 1rpx solid #E6E6EA;
    
}

.search-bar__box{
    position: relative;
    padding-left: 60rpx;
    padding-right: 60rpx;
    width: 100%;
    box-sizing: border-box;
    z-index: 1;
}

.icon-search_in-box{
    position: absolute;
    left: 20rpx;
    top: 14rpx;
}

.search-bar__input{
    height: 56rpx;
    line-height: 56rpx;
    font-size: 28rpx;
}

.icon-clear{
    position: absolute;
    top: 0;
    right: 0;
    padding: 14rpx 16rpx;
    font-size: 0;
}

.search-bar__label{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 2;
    border-radius: 20rpx;
    text-align: center;
    color: #9B9B9B;
    background: #EFEFF4;
    line-height: 56rpx;
}

.icon-search{
    margin-right: 16rpx;
    font-size: inherit;
}

.search-bar__text{
    display: inline-block;
    font-size: 28rpx;
    vertical-align: middle;
}

.search-bar__cancel-btn{
    margin-left: 20rpx;
    line-height: 56rpx;
    color: #09BB07;
    white-space: nowrap;
}

/*轮播*/
swiper-container{  
  position: relative;  
}  
.swiper-container .swiper{  
  width:100%;
  height:500rpx; 
}
.swiper-container .swiper .img{  
  width: 100%;  
  height: 100%;  
}

.swiper-container .icon_group{
    position:absolute;
    top:39rpx;
    left:573rpx;
}
.swiper-container .icon_group .search{
    width:71rpx;
    height:70rpx;
}

.swiper-container .icon_group .myTrait{
    width:71rpx;
    height:70rpx;
    margin-left:15rpx;
}





/*班夫生活*/

.bfLive{
    display: flex;
    flex-flow: column wrap;
    align-content: flex-start;
    overflow: hidden;
    height: 500rpx;
}

.bfLive .cell1of3{
    display: flex;
    height:200rpx;
    width: 25%;
}

.bfLive .cell2of3{
    display: flex;
    height: 300rpx;
    width: 25%;
}


/*班夫宝典*/
.bfBook{
    display: flex;
    flex-flow: row wrap;
    overflow: hidden;
    margin: 25rpx;
}

.bfBook-item{
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    box-sizing: border-box;
    width: 50%;
    height: 180rpx;
    
}

.bfBook .bfBook-item .title{
    font-size: 38rpx;
    line-height: 30rpx;
    color: white;
    font-weight:bold;
}

.bfBook .bfBook-item .division{
    font-size: 38rpx;
    color: white;
    font-weight:bold;
}

.bfBook .bfBook-item .logo{
    font-size: 22rpx;
    color:white;
}

/*精彩班夫*/
.bfWonderful_title{
    font-size:38rpx;
    line-height: 45px;
    margin: 30rpx auto 35rpx;
    text-align:  center;
    color: rgb(103, 46, 108);
    font-weight:bold;
}


.list {
    display: flex;
    flex: 1;
    flex-direction: column;
    background-color: #f0eff5;
    background-repeat: no-repeat;
    background-size: 100% auto; 
    background-position: bottom center;
    /*使用网络资源*/
    /*background-image: url('../../image/background.png');*/
}

.list .item {
  display: flex;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
  margin: auto 25rpx;
  position: relative;
}

.list .item .poster {
  width: 100%;
  height: 230rpx;
  
}

.list .item .title{
    color:white;
    position:absolute;
    top:155rpx;
    left:35rpx;
    font-size: 38rpx;
    font-weight:bold;
}

.list .item .icon{
    width:25rpx;
    height: 32rpx;
    position: absolute;
    top:155rpx;
    right:25rpx;
}

