<view class="Page">
    <view class="page__bd page__bd_spacing">
        <view class="kind-list">
            <block wx:for="{{list}}" wx:key="id">
                <view class="kind-list__item">
                    <view id="{{item.id}}" class="weui-flex kind-list__item-hd {{item.open ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
                        <view class="weui-flex__item">{{item.name}}</view>
                    </view>
                    <view class="kind-list__item-bd {{item.open ? 'kind-list__item-bd_show' : ''}}">
                        <view class="weui-cells {{item.open ? 'weui-cells_show' : ''}} advention">
                            <block wx:if="{{item.id == 'scenery'}}" wx:for="{{item.pages}}" wx:for-item="page" wx:key="*this">
                                    <navigator class="advention_scenery">
                                        <image src="../../../image/{{page}}.png" class="scenery_img"></image>
                                    </navigator>
                            </block>
                            <block wx:if="{{item.id == 'advention'}}" wx:for="{{item.pages}}" wx:for-item="page" wx:key="*this">
                                <navigator class="advention_advention">
                                        <image src="../../../image/{{page}}.png" class="advention_img"></image>
                                </navigator>
                            </block>
                        </view>
                    </view>
                </view>
            </block>
        </view>
    </view>
</view>