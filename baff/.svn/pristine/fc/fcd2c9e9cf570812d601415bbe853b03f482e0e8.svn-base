<view class="Page">
  <scroll-view scroll-y="true" class="list" bindscrolltolower="lower" style="height:{{scrollHeight}}px;">

    <!--轮播 -->
    <view class="swiper-container">
        <swiper class="swiper" indicator-dots="true" current="{{swiperCurrent}}" bindchange="swiperChange">
            <block wx:for="{{imgUrls}}" wx:key="imgUrls">
                 <!--<swiper-item  style="background:url({{item}});background-repeat: no-repeat;background-size:100% 200px; ">
                </swiper-item>-->
                <swiper-item>
                    <image src="{{item}}" class="img"/>        
                </swiper-item>
            </block>
        </swiper>
        <view class="icon_group" style="position:absolute;left:24rpx;top:24rpx;display:flex;">
            <!--搜索 -->
            <view class="search-bar" style="{{'visibility:'+search_visibility+';'}}">
                <view class="search-bar__form">
                    <view class="search-bar__box">
                        <icon class="icon-search_in-box" type="search" size="14"></icon>
                        <input type="text" class="search-bar__input" value="{{search_inputVal}}" focus="{{search_inputShowed}}" bindinput="inputTyping" />
                        <view class="icon-clear" wx:if="{{search_inputVal.length > 0}}" bindtap="clearInput">
                            <icon type="clear" size="14"></icon>
                        </view>
                    </view>
                    <label class="search-bar__label" hidden="{{search_inputShowed}}" bindtap="showInput">
                        <icon class="icon-search" type="search" size="14"></icon>
                        <view class="search-bar__text">搜索你的问题</view>
                    </label>
                </view>
                <view class="search-bar__cancel-btn" hidden="{{!search_inputShowed}}" bindtap="hideInput">取消</view>
            </view>
            <image src="../../image/swiper_icon1.png" class="search" mode="aspectFill" bindtap="searchDisplay" ></image>
            <image src="../../image/swiper_icon2.png" class="myTrait" mode="aspectFill"></image>
        </view>
    </view>
        
        <!--班夫生活-->
        <view>
            <view class="bfLive">
                <navigator url="{{'../live/food/food?id='+food.id}}" class="cell1of3">
                    <!--<image src="../../image/food.png" mode="widthFix" class="bfLive_name"></image>-->
                    {{food.name}}
                </navigator>
                <navigator url="" class="cell2of3">
                    {{shop.name}}
                </navigator>
                <navigator url="" class="cell2of3">
                    {{culture.name}}
                </navigator>
                <navigator url="" class="cell1of3">
                    {{fitness.name}}
                </navigator>
                <navigator url="" class="cell1of3">
                    {{accommodation.name}}
                </navigator>
                <navigator url="" class="cell2of3">
                    {{entertainment.name}}
                </navigator>
                <navigator url="" class="cell2of3">
                    {{scenery.name}}
                </navigator>
                <navigator url="" class="cell1of3">
                    全部
                </navigator>
            </view>
        </view>

        <!--班夫宝典-->
            <view class="bfBook">
                <block wx:for="{{book}}" wx:key="id">
                    <navigator class="bfBook-item" style="background-color:{{item.color}};" url="{{'../book/'+item.id+'/'+item.id}}">
                        <view class="title" style="margin-top:38rpx;">{{item.name}}</view>
                        <view class="division">—</view>
                        <view class="logo">班夫宝典</view>
                    </navigator>
                </block>
                
            </view>
            
        <!--精彩班夫-->
        <view class="bfWonderful_title"> / 精彩班夫 /</view>
        
            <block wx:for="{{wonderful}}" wx:key="*this">
                <navigator url="{{item.url}}" class="item">
                      <image class="poster" src="{{item.img}}"></image>
                      <view class="title">{{item.name}}</view>
                      <image src="../../image/arrow.png" class="icon"></image>
                </navigator>
            </block>
  </scroll-view>
    
</view>



