<view class="Page">
  <view class="page__bd page__bd_spacing">
    <!--轮播 -->
        <swiper indicator-dots="true" style="margin-top:-9px;height:200px;position::relative">
            <block wx:for="{{imgUrls}}" wx:key="imgUrls">
                <swiper-item>
                    <image src="{{item}}" style="width:100%;height:200px;"/>
                    <view style="position:absolute;top:10px;left:330px">文字</view>
                </swiper-item>
            </block>
        </swiper>
        <!--班夫生活-->
        <view>
            <view class="bfLive_title">班夫生活</view>
            <view class="bfLive">
                <navigator url="" class="cell1of3">
                    <view class="bfLive_name">美食</view>
                </navigator>
                <navigator url="" class="cell2of3">
                    <view class="bfLive_name">住宿</view>
                </navigator>
                <navigator url="" class="cell2of3">
                    <view class="bfLive_name">购物</view>
                </navigator>
                <navigator url="" class="cell1of3">
                    <view class="bfLive_name">娱乐</view>
                </navigator>
                <navigator url="" class="cell1of3">
                    <view class="bfLive_name">文化</view>
                </navigator>
                <navigator url="" class="cell2of3">
                    <view class="bfLive_name">风景</view>
                </navigator>
                <navigator url="" class="cell2of3">
                    <view class="bfLive_name">健身</view>
                </navigator>
                <navigator url="" class="cell1of3">
                    <view class="bfLive_name">全部</view>
                </navigator>
            </view>
        </view>
        <!--班夫宝典-->
        <view>
            <view class="bfBook_title">班夫宝典</view>
            <view class="bfBook">
                <block wx:for="{{book}}" wx:key="id">
                    <navigator class="bfBook-item" url="{{'../book/'+item.id+'/'+item.id}}">
                        <image src="{{item.img}}" class="bfBook_img"></image>
                    </navigator>
                </block>
                
            </view>
        </view>
        <!--精彩班夫-->
        <view class="bfWonderful_title">精彩班夫</view>
        <scroll-view scroll-y="true" class="list" lower-threshold="5" bindscrolltolower="lower" style="height:300px;">
            <block wx:for="{{wonderful}}" wx:key="*this">
                <navigator url="" class="item" wx:if="{{item.img.length > 0}}">
                      <image class="poster" src="{{item.img}}"></image>
                      <view class="meta">
                        <view class="title">景点Top10</view>
                        <view class="text">{{item.text}}</view>
                      </view>
                </navigator>
                <navigator url="" class="item" wx:else>
                      <view class="meta">
                        <view class="title">景点Top10</view>
                        <view class="text">{{item.text}}</view>
                      </view>
                </navigator>
                      
            </block>
          </scroll-view>

  </view>
</view>



