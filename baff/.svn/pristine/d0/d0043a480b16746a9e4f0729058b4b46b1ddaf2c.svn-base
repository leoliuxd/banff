<view class="Page">
    <view class="page__bd page__bd_spacing">
        <picker bindchange="seasonChange" value="{{seasonIndex}}" range="{{seasonName}}">
            <button type="default seasonButton">{{seasonName[seasonIndex]}}</button>
        </picker>
        <!--内容-->
        <view class="content">
              <scroll-view class="list" scroll-y="true">
                <block wx:for="{{selectedSeason}}" wx:key="*this">
                    <view url="" class="item kind-list__item">
                        <image class="poster" src="{{item.img}}"></image>
                        <view id="{{item.id}}" class="meta kind-list__item-hd {{item.open ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
                            <view class="title">{{item.name}}</view>
                            <view class="text">{{item.text}}</view>
                            <view class="unfold" style="{{'background-color:'+item.unfoldColor+';'}}"></view>
                        </view>
                        
                    </view>
                    <view class="details_container kind-list__item-bd {{item.open ? 'kind-list__item-bd_show' : ''}}">
                            <view class="weui-cells {{item.open ? 'weui-cells_show' : ''}}">
                            <view class="details">{{item.text}}</view>
                            </view>
                        </view>
                </block>


              </scroll-view>    
        </view>
    </view>
</view>





 




