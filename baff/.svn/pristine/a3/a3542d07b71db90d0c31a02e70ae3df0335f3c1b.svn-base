<import src="../../../../wxParse/wxParse.wxml"/> 
<view class="Page">
  <scroll-view class="list" scroll-y="true" style="height:{{scrollHeight}}px;">
    <swiper class="swiper" indicator-dots="true" wx:if="{{imgs.length > 0}}">
      <block wx:for="{{imgs}}" wx:key="*this">
        <swiper-item>
          <image src="{{item}}" class="img"/>        
        </swiper-item>
      </block>
    </swiper>
    <view class="meta">
      <view class="name_groups">
        <view class="name">{{title}}</view>
        <image src="../../../../image/share_icon.png" class="icon1"></image>
        <image src="../../../../image/content_icon.png" class="icon2"></image>
        <image src="../../../../image/location_icon.png" class="icon3"></image>
      </view>
      
      <view class="profile">{{profile}}</view>
    </view>
    <view class="details">
      <view class="edge1">
        <view class="angle1"></view>
      </view>
      <view class="edge2">
        <view class="angle2"></view>
      </view>
      <!--商户详情-->
      <view class="content">
        <view class="address">
          <image src="../../../../image/address.png" class="img"></image>
          <view class="text">{{address}}</view>
        </view>
        <view class="telphone">
          <image src="../../../../image/telphone.png" class="img"></image>
          <view class="text">{{telphone}}</view>
        </view>
        <view class="email">
          <image src="../../../../image/email.png" class="img"></image>
          <view class="text">{{email}}</view>
        </view>
        <view class="website">
          <image src="../../../../image/website.png" class="img"></image>
          <view class="text">{{website}}</view>
        </view>
      </view>
    </view>
    <!--后缀的一些信息-->
      <view class="supplement" wx:if="{{content.length > 0}}">
        <view class="title_groups">
          <view class="icon"></view>
          <view class="title">景点贴士</view>
        </view>
        <view class="text">
          <template is="wxParse" data="{{wxParseData:merchants_tips.nodes}}"/>
        </view>
      </view>
  </scroll-view>
</view>